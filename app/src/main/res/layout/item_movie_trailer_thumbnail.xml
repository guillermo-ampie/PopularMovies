<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content">
  <ImageView
    android:id="@+id/image_movie_trailer_thumbnail_trailer_thumbnail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="start|center_vertical"
    android:paddingStart="@dimen/padding_thin_horizontal_material"
    android:paddingEnd="@dimen/padding_thin_horizontal_material"
    android:paddingLeft="@dimen/padding_thin_horizontal_material"
    android:paddingRight="@dimen/padding_thin_horizontal_material"
    android:contentDescription="@string/movie_trailer_desc"
    tools:src="@drawable/no_thumbnail"/>

  <ImageView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical|center_horizontal"
    android:contentDescription="@string/movie_trailer_desc"
    app:srcCompat="@drawable/ic_play_circle_outline_black_48dp"/>
</FrameLayout>