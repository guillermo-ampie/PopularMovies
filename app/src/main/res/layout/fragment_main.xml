<android.support.constraint.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:id="@+id/frameLayout"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:paddingTop="@dimen/activity_vertical_margin"
  android:paddingBottom="@dimen/activity_vertical_margin"
  android:paddingLeft="@dimen/activity_horizontal_margin"
  android:paddingRight="@dimen/activity_horizontal_margin"
  tools:context=".ui.BaseMovieListFragment">
  <!--tools:showIn="@layout/activity_main">-->

  <android.support.v7.widget.RecyclerView
    android:id="@+id/recycler_main_movie_grid"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_marginBottom="8dp"
    android:scrollbars="vertical"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    tools:listItem="@layout/movie_poster_item"/>
  <ProgressBar
    android:id="@+id/progressbar_main_base"
    style="@style/Widget.AppCompat.ProgressBar.Horizontal"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:indeterminate="true"
    android:visibility="invisible"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintWidth_percent="0.2"/>
  <ImageView
    android:id="@+id/image_main_no_connection"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:visibility="invisible"
    android:contentDescription="@string/error_contacting_server"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintWidth_percent="0.5"
    app:srcCompat="@drawable/ic_cloud_off_black_180x180dp"/>
  <TextView
    android:id="@+id/text_main_no_connection"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:visibility="invisible"
    android:text="@string/error_contacting_server"
    android:textAppearance="?android:attr/textAppearanceMedium"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/image_main_no_connection"/>
  <ImageView
    android:id="@+id/image_main_no_favourites_movies"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:contentDescription="@string/description_main_no_favourite_movies"
    android:visibility="invisible"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintWidth_percent="0.5"
    app:srcCompat="@drawable/ic_favorite_black_180x180dp"/>
  <TextView
    android:id="@+id/text_main_no_favourite_movies"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:visibility="invisible"
    android:text="@string/main_no_favourite_movies"
    android:textAppearance="?android:attr/textAppearanceMedium"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/image_main_no_favourites_movies"/>
  <android.support.constraint.Group
    android:id="@+id/group_main_no_connection"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:visibility="invisible"
    app:constraint_referenced_ids="image_main_no_connection,text_main_no_connection"/>
  <android.support.constraint.Group
    android:id="@+id/group_main_no_favourite_movies"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:visibility="invisible"
    app:constraint_referenced_ids="image_main_no_favourites_movies,text_main_no_favourite_movies"/>
</android.support.constraint.ConstraintLayout>
